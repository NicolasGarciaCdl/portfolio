{% set currentPath = path(app.request.attributes.get('_route'),
    app.request.attributes.get('_route_params')) %}
<header>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="/"><img class="img-brand" src="{{ asset('/img_projet/logo_portfolio.png') }}" alt="logo de Nicolas Garcia"></a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse " id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0 mx-auto">

                    <li {% if route_name == 'app_home' %} class="nav-item active me-4" {% else %} class="nav-item me-4" {% endif %}>
                        <a class="nav-link" href="/">Accueil</a>
                    </li>

                    {% if (currentPath is same as ('/') or currentPath is same as('/admin') ) %}
                        <li class="nav-item me-4">
                            <a class="nav-link" href="#skills">Compétences</a>
                        </li>
                    {% endif %}
                    <li {% if route_name == 'app_project_index' %} class="nav-item active me-4" {% else %} class="nav-item me-4" {% endif %}>
                        <a class="nav-link" href="{{ path('app_project_index') }}">Réalisations</a>
                    </li>
                    <li {% if route_name == 'app_article_index' %} class="nav-item active me-4" {% else %} class="nav-item me-4" {% endif %}>
                        <a class="nav-link" href="{{ path('app_article_index') }}">Blog</a>
                    </li>
                    <li {% if route_name == 'app_contact' %} class="nav-item active me-4" {% else %} class="nav-item me-4" {% endif %}>
                        <a class="nav-link" href="{{ path('app_contact') }}">Contact</a>
                    </li>

                </ul>

                {% if (app.user) %}
                <div class="right">
                    <div class="dropdown text-start">
                        <a href="#" class="d-block link-dark text-decoration-none dropdown-toggle" id="dropdownUser1" data-bs-toggle="dropdown" aria-expanded="false">
                            <h5 class="text-white"> Bonjour {{ app.user.firstName }}</h5>
                        </a>
                        <ul class="dropdown-menu text-small" aria-labelledby="dropdownUser1">
                            {% if is_granted('ROLE_ADMIN') %}
                                <li><a class="dropdown-item" href="{{ path('admin') }}">Tableau de bord</a></li>
                            {% endif %}
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item" href="{{ path('app_logout') }}">Déconnecter</a></li>
                        </ul>
                    </div>
                    {% else %}
                        <ul class="navbar-nav">
                            <li class="nav-item">
                                <a href="{{ path('app_login') }}" class="btn mt-2 text-white">Se Connecter</a>
                            </li>
                            <li class="nav-item">
                                <a href="{{ path('app_register') }}" class="btn mt-2 text-white">S'inscrire</a>
                            </li>
                        </ul>
                    {% endif %}
                </div>
            </div>
        </div>
        </div>
    </nav>
</header>


