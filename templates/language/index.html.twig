{% extends 'base.html.twig' %}

{% block title %}Les Langages{% endblock %}

{% block body %}
    <h1 class="m-4 display-4 text-center">Liste des Langages</h1>
    <a class="btn btn-warning mb-4 " href="{{ path('app_language_new') }}">Ajouter un langage</a>
    <div class="container">
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Picture</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for language in languages %}
            <tr>
                <td>{{ language.id }}</td>
                <td>{{ language.title }}</td>
                <td>{{ language.imageName }}</td>
                <td>
                    <a href="{{ path('app_language_show', {'id': language.id}) }}">Détails</a>
                    <a href="{{ path('app_language_edit', {'id': language.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">Pas d'enregistrements trouvés !</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    </div>
{% endblock %}
