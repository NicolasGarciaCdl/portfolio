{% extends 'base.html.twig' %}

{% block title %}Se Connecter{% endblock %}

{% block body %}
    <form method="post">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        {% if app.user %}
            <div class="mb-3">
                Vous êtes connecté comme {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Se Déconnecter</a>
            </div>
        {% endif %}
        <div class="container mt-5 login">
            <h1 class="h3 mb-3 font-weight-normal text-white">Connectez-vous</h1>
            <p class="text-white">Pas encore de compte !! <a href="{{ path('app_register') }}">Créez un compte ici</a></p>
            <label class="text-white" for="inputEmail">Adresse de messagerie / Email</label>
            <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
            <label class="text-white" for="inputPassword">Mot de Passe / Password</label>
            <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>

            <input type="hidden" name="_csrf_token"
                   value="{{ csrf_token('authenticate') }}"
            >

            {#
            Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
            See https://symfony.com/doc/current/security/remember_me.html

            <div class="checkbox mb-3">
                <label>
                    <input type="checkbox" name="_remember_me"> Remember me
                </label>
            </div>
            #}

            <button class="btn btn-lg btn-primary mt-2 mb-4" type="submit">
                Valider
            </button>
        </div>
    </form>
{% endblock %}
