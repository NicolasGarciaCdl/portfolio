{% extends 'base.html.twig' %}

{% block title %}Comment{% endblock %}

{% block body %}
    <div class="container">
        <h1>Commentaire n°{{ comment.id }}</h1>

        <table class="table">
            <tbody>
            <tr>
                <th>#</th>
                <td>{{ comment.id }}</td>
            </tr>
            <tr>
                <th>Contenu</th>
                <td>{{ comment.content }}</td>
            </tr>
            <tr>
                <th>Crée le </th>
                <td>{{ comment.createdAt ? comment.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Modifier le </th>
                <td>{{ comment.updatedAt ? comment.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Titre de l'article</th>
                <td>{{ comment.article ? comment.article : '' }}</td>
            </tr>
            <tr>
                <th>Nom de l'utilisateur</th>
                <td>{{ comment.user ? comment.user : '' }}</td>
            </tr>
            </tbody>
        </table>

        <a class="btn btn-info" href="{{ path('app_comment_index') }}">Retour à la liste</a>

        <a class="btn btn-success" href="{{ path('app_comment_edit', {'id': comment.id}) }}">Modifier</a>

        {{ include('comment/_delete_form.html.twig') }}
    </div>
{% endblock %}
